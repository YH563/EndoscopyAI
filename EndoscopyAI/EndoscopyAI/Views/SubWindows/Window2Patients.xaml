<Window x:Class="EndoscopyAI.Views.SubWindows.Window2Patients"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:EndoscopyAI.Views.SubWindows"
        xmlns:md="clr-namespace:MdXaml;assembly=MdXaml"
        mc:Ignorable="d"
        Title="智能问诊" Height="750" Width="650" ResizeMode="NoResize"
        Background="#f5f5f5"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Material Design -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.Green.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Secondary/MaterialDesignColor.Lime.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- 自定义绿色按钮样式 -->
            <Style x:Key="GreenRaisedButton" TargetType="Button">
                <Setter Property="Margin" Value="5" />
                <Setter Property="Padding" Value="10" />
                <Setter Property="Background" Value="#dcf6eb"/>
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="BorderBrush" Value="#FFFFFFFF"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                               CornerRadius="10"
                               Background="{TemplateBinding Background}"
                               BorderBrush="{TemplateBinding BorderBrush}"
                               BorderThickness="{TemplateBinding BorderThickness}"
                               Padding="{TemplateBinding Padding}"
                               RenderTransformOrigin="0.5,0.5">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="#FFFDEB3B"/>
                                    <Setter TargetName="border" Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#b3e9d9"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- 圆角TextBox样式 -->
            <Style x:Key="RoundedTextBoxStyle" TargetType="TextBox">
                <Setter Property="Background" Value="White"/>
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="BorderBrush" Value="#1ba58c"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="Padding" Value="8"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
                <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TextBox">
                            <Grid>
                                <Border x:Name="border"
                                   CornerRadius="10"
                                   Background="{TemplateBinding Background}"
                                   BorderBrush="{TemplateBinding BorderBrush}"
                                   BorderThickness="{TemplateBinding BorderThickness}"
                                   SnapsToDevicePixels="True">
                                    <ScrollViewer x:Name="PART_ContentHost"
                                             Margin="{TemplateBinding Padding}"
                                             VerticalAlignment="Stretch"/>
                                </Border>
                                <TextBlock x:Name="placeholder"
                                      Text="{TemplateBinding materialDesign:HintAssist.Hint}"
                                      Foreground="{TemplateBinding Foreground}"
                                      Opacity="0.5"
                                      Margin="8,0"
                                      VerticalAlignment="Center"
                                      Visibility="Collapsed"
                                      IsHitTestVisible="False"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="Text" Value="">
                                    <Setter TargetName="placeholder" Property="Visibility" Value="Visible"/>
                                </Trigger>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="#FF0D9C7F"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            
            <!-- 时间戳显示控制 -->
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,20" VerticalAlignment="Center">
            <materialDesign:PackIcon Kind="AccountHeart" Width="32" Height="32" Foreground="#1ba58c" Margin="0,0,10,0"/>
            <TextBlock Text="智能问诊" FontSize="24" FontWeight="Bold" Foreground="#333"/>
        </StackPanel>

        <!-- 聊天记录 -->
        <ListBox x:Name="ChatHistoryListBox"
                Grid.Row="1"
                ItemsSource="{Binding}"
                Background="Transparent"
                BorderThickness="0"
                ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Margin" Value="0"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Focusable" Value="False"/>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Timestamp}" FontSize="12" Foreground="#666" Margin="0,0,0,2" HorizontalAlignment="Center"
                                  Visibility="{Binding ShouldShowTimestamp, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <ContentControl Content="{Binding}">
                            <ContentControl.Style>
                                <Style TargetType="ContentControl">
                                    <Setter Property="ContentTemplate">
                                        <Setter.Value>
                                            <DataTemplate>
                                                <Border Background="#e6f7f2" CornerRadius="10" Padding="10" Margin="5" MaxWidth="400" HorizontalAlignment="Left">
                                                    <md:MarkdownScrollViewer Markdown="{Binding Message}" Foreground="Black" Background="#e6f7f2" BorderThickness="0" FontSize="14" VerticalScrollBarVisibility="Disabled" IsHitTestVisible="False"/>
                                                </Border>
                                            </DataTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsPatientMessage}" Value="True">
                                            <Setter Property="ContentTemplate">
                                                <Setter.Value>
                                                    <DataTemplate>
                                                        <Border Background="#1ba58c" CornerRadius="10" Padding="10" Margin="5" MaxWidth="400" HorizontalAlignment="Right">
                                                            <TextBlock Text="{Binding Message}" Foreground="White" FontSize="14" TextWrapping="Wrap" HorizontalAlignment="Left"/>
                                                        </Border>
                                                    </DataTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ContentControl.Style>
                        </ContentControl>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- 输入区 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
            <TextBox x:Name="PatientInputBox"
                     Style="{StaticResource RoundedTextBoxStyle}"
                     AcceptsReturn="True"
                     Height="100"
                     Width="450"
                     FontSize="15"
                     materialDesign:HintAssist.Hint=" "
                     VerticalContentAlignment="Top"/>
            <Button Content="发送"
                    Style="{StaticResource GreenRaisedButton}"
                    Height="50"
                    Width="100"
                    Margin="10,0,0,0"
                    FontSize="16"
                    FontWeight="Bold"
                    Click="SendMessage_Click"/>
        </StackPanel>
    </Grid>
</Window>
