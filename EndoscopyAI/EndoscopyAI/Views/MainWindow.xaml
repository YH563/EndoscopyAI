<Window x:Class="EndoscopyAI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EndoscopyAI.Views"
        mc:Ignorable="d"
        Title="辅助诊断系统" Height="450" Width="800">
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Canvas Grid.Row="0">
            <TextBlock Text="我们的LOGO" FontSize="12" FontWeight="Bold" Canvas.Left="0" Canvas.Top="0"/>
            <Button Content="打开" Height="20" Width="50" Canvas.Left="80" Canvas.Top="0"/>
            <Button Content="编辑" Height="20" Width="50" Canvas.Left="130" Canvas.Top="0"/>
            <Button Content="帮助" Height="20" Width="50" Canvas.Left="180" Canvas.Top="0"/>
        </Canvas>

        <Grid Grid.Row="1" Grid.Column="0" ShowGridLines="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="240"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <Button Content="图像增强" Height="40" Margin="0,0,0,0"/>
                <Button Content="图像降噪" Height="40"/>
                <Button Content="白平衡矫正" Height="40"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Margin="10">
                
            </StackPanel>

            <Grid Grid.Row="1" Grid.Column="2" ShowGridLines="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="280"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Column="0" Margin="10">
                    <TextBlock Text="第二行第三列" FontSize="16" FontWeight="Bold"/>
                </StackPanel>
                <StackPanel Grid.Row="1" Margin="10">
                    <TextBlock Text="第三行第三列" FontSize="16" FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
